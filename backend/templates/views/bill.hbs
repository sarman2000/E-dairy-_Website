<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bill</title>
    <link rel="stylesheet" href="/css/index.css">
    <style>
        body {
            background-color: #F6F6F6;
            margin: 0;
            padding: 0;
        }

        h1,
        h2,
        h3,
        h4,
        h5,
        h6 {
            margin: 0;
            padding: 0;
        }

        p {
            margin: 0;
            padding: 0;
        }

        .container {
            width: 80%;
            margin-right: auto;
            margin-left: auto;
        }

        .brand-section {
            background-color: #0d1033;
            padding: 10px 40px;
        }

        .logo {
            width: 50%;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
        }

        .col-6 {
            width: 50%;
            flex: 0 0 auto;
        }

        .text-white {
            color: #fff;
        }

        .company-details {
            float: right;
            text-align: right;
        }

        .body-section {
            padding: 16px;
            border: 1px solid gray;
        }

        .heading {
            font-size: 20px;
            margin-bottom: 08px;
        }

        .sub-heading {
            color: #262626;
            margin-bottom: 05px;
        }

        table {
            background-color: #fff;
            width: 100%;
            border-collapse: collapse;
        }

        table thead tr {
            border: 1px solid #111;
            background-color: #f2f2f2;
        }

        table td {
            vertical-align: middle !important;
            text-align: center;
        }

        table th,
        table td {
            padding-top: 08px;
            padding-bottom: 08px;
        }

        .table-bordered {
            box-shadow: 0px 0px 5px 0.5px gray;
        }

        .table-bordered td,
        .table-bordered th {
            border: 1px solid #dee2e6;
        }

        .text-right {
            text-align: end;
        }

        .w-20 {
            width: 20%;
        }

        .float-right {
            float: right;
        }

        #print {
            margin: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
        }
    </style>
</head>

<body>
    {{>nav_bar}}
    <div id="libInp">
        <div class="container">
            <div class="brand-section">
                <div class="row">
                    <div class="col-6">
                        <h1 class="text-white">E-Dairy</h1>
                    </div>
                    <div class="col-6">
                        <div class="company-details">
                            <p class="text-white">edairy@company.np</p>
                            <p class="text-white">Gaindakot-13, Nawalpur</p>
                            <p class="text-white">+977 98xxxxxxxx</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="body-section">
                <div class="row">
                    <div class="col-6">
                        <h2 class="heading">Order No.: {{your_order.order_id}}</h2>
                        <p id="dateContainer" class="sub-heading"></p>
                        <p class="sub-heading">Email Address: {{user.user_email}} </p>
                    </div>
                    <div class="col-6">
                        <p class="sub-heading">Full Name: {{user.user_name}}</p>
                        <p class="sub-heading">Address: {{user.user_location}}</p>
                        <p class="sub-heading">Phone Number: {{user.user_phone_num}}</p>
                    </div>
                </div>
            </div>

            <div class="body-section">
                <h3 class="heading">Ordered Items</h3>
                <br>
                <table class="table-bordered">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th class="w-20">Price</th>
                            <th class="w-20">Quantity</th>
                            <th class="w-20">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>{{product.product_name}}</td>
                            <td>{{product.product_price}}</td>
                            <td>{{your_order.product_quantity}}</td>
                            <td>{{total}}</td>
                        </tr>
                        <tr>
                            <td colspan="3" class="text-right">Grand Total</td>
                            <td>{{total}}</td>
                        </tr>
                    </tbody>
                </table>
                <br>
                <h3 class="heading">Payment Mode: {{your_order.payment_mode}}</h3>
            </div>
        </div>
        <div id="print">
            <button id="print_btn" onclick="libPrint()">Print Bill</button>
            <a href="/shop" id="shop_more" class="shopnow">Shop Now</a>
        </div>
    </div>
</body>
<script>
    var dateContainer = document.getElementById("dateContainer");
    var nav_head = document.getElementById("header");
    var btn = document.getElementById("print_btn");
    var more_shop = document.getElementById("shop_more");
    // Generate the current date
    var currentDate = new Date();
    var formattedDate = currentDate.toLocaleDateString();
    dateContainer.textContent = `Order Date: ${formattedDate}`;
    function libPrint() {
        var libBtnWrap = document.getElementById("print");
        libBtnWrap.style.display = "none";
        nav_head.style.display = "none";
        window.print();
        nav_head.style.display = "flex";
        libBtnWrap.style.display = "flex";
        btn.style.display = "none";
        more_shop.style.display = "block";
    }
</script>

</html>