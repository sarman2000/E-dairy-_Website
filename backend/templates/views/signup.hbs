      const uemail = document.getElementById("sign-email");
      const passwordInput = document.getElementById("sign-password");
      const confirmPasswordInput = document.getElementById("confirm-password");
      if (allLetter(uname) && disselect(udis) && phonenumber(phoneinput) && ValidateEmail(uemail)) {
         return true;
      } else {
         return false;
      }
   }

   function allLetter(uname) {
      console.log(x);
      var letters = /^[A-Za-z]+$/;
      if (uname.value.match(letters)) {
         return true;
      }
      else {
         alert('Username must have alphabet characters only');
         uname.focus();
         return false;
      }
   }

   function disselect(udis) {
      console.log(x);
      if (udis.value == "Default") {
         alert('Select your district from the list');
         udis.focus();
         return false;
      }
      else {
         return true;
      }
   }

   function phonenumber(phoneinput) {
      var phoneno = /^(97||98)\d{8}$/;
      console.log(phoneinput.value);
      if (phoneno.test(phoneinput.value)) {
         return true;
      }
      else {
         alert("Not a valid Phone Number");
         return false;
      }
   }

   function ValidateEmail(uemail) {
      var mailformat = /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
      if (uemail.value.match(mailformat)) {
         return true;
      }
      else {
         alert("You have entered an invalid email address!");
         uemail.focus();
         return false;
      }
   }

</script>

