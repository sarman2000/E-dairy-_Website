                  </select>
               </div>
               <div class="form-group">
                  <input type="text" class="form-control" id="phone" placeholder="Phone Number" name="phone_num">
               </div>
               <div class="form-group">
                  <input type="email" class="form-control" id="sign-email" placeholder="Email" name="email">
               </div>
               <div class="form-group">
                  <input type="password" class="form-control" id="sign-password" placeholder="Password" name="password">
               </div>
